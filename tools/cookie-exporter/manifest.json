{
  "manifest_version": 3,
  "name": "MEXC Cookie Exporter",
  "version": "1.1",
  "description": "Export and auto-refresh MEXC cookies for trading automation",
  "permissions": ["cookies", "activeTab", "nativeMessaging", "alarms", "storage"],
  "host_permissions": ["*://*.mexc.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
