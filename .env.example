# MEXC API Configuration
# DO NOT commit the real .env file - only this example
# Copy this file to .env and fill in your actual keys

# Get your API keys from: https://www.mexc.com/user/openapi
# IMPORTANT: Enable only "Futures Trading" permission
# IMPORTANT: Set IP whitelist to your server IP for extra security

MEXC_API_KEY=your_api_key_here
MEXC_API_SECRET=your_api_secret_here

# Safety Controls
# Set to 'true' to enable live trading (default: false = paper only)
LIVE_TRADING_ENABLED=false

# Maximum position size in USDT (safety limit)
MAX_POSITION_SIZE_USDT=100

# Maximum total exposure in USDT (all positions combined)
MAX_TOTAL_EXPOSURE_USDT=500

# Maximum leverage allowed (will cap bot leverage at this)
MAX_LEVERAGE=20

# Symbols blacklist (comma-separated, won't trade these)
BLACKLISTED_SYMBOLS=

# Emergency stop - set to 'true' to halt all trading
EMERGENCY_STOP=false
